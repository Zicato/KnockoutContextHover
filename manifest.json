{
  // "about": "Log icon was made by Freepik from www.flaticon.com",
  "name": "ko-context-hover",
  "description": "KnockoutJS Context Hover - Development and debugging assistant for Knockout JS",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Alexandros Papounidis",
  "icons": {
    "48": "icons/ko-context-hover-icon.svg"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ], // "*://*/"
      "css": [ "styles/ko-context-hover-style.css" ],
      "js": [
        "scripts/knockoutjs-3.4.2.min.js",
        "scripts/jquery-3.2.1.min.js",
        "scripts/contentscript.js"
      ]
    }
  ],

  "background": {
    "scripts": [ "scripts/background.js" ]
  },

  "web_accessible_resources": [
    "icons/log.svg",
    "markup/panel.html",
    "scripts/ko-context-hover.js",
    "reference-binding-handlers/ko.bindingHandlers.hoverClass.js",
    "reference-binding-handlers/ko.bindingHandlers.let.js"
  ],

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "applications": {
    "gecko": {
      "id": "knockout@hover.com"
    }
  }
}
